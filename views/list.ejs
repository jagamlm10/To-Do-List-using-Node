<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

        <!-- Using scriplet tag for control flow statements -->
        <!-- newListItem is rendered from app.js -->
    <div class="box">
        <%for (var i=0 ; i<newListItems.length ; i++){%>
            <div class="item">
                <input type="checkbox">
                <!-- Outputing the value as HTML template using EJS tags -->
                <p><%= newListItems[i] %></p>
            </div>
        <% } %>
        <form action="/" method="post" class="item">
            <input type="text" name="newItem" placeholder="New Item">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>


    
<%- include("footer") -%>